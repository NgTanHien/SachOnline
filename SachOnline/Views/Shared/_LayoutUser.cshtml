<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style type="text/css">
        .imgbook {
            transition: all 1s ease-in;
            width: 400px;
        }

            .imgbook:hover {
                transform: scale(0.9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-inverse">
        <navbar-fixed-top>
            <container>
                <div class="container">


                    @Html.Action("NavPartial","SachOnline")


                </div>
            </container>
        </navbar-fixed-top>
    </nav>


    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @Html.Action("SliderPartial","SachOnline")
                
            </div>
        </div>
    </div>

        <container>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        @Html.Action("ChuDePartial", "SachOnline")
                        @Html.Action("NhaXuatBanPartial", "SachOnline")
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                        @RenderBody()
                    </div>
                </div>
                <hr>
            </div>
        </container>


        <container>
            <div class="container">
                <div class="row">
                    <h2 class="text-center">SÁCH BÁN NHIỀU</h2>
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            @Html.Action("SachBanNhieuPartial", "SachOnline")
                        </div>
                    </div>

                    <hr>
                    <row>
                </div>
            
            </div>
        </container>


        <footer class="container well">
            @Html.Action("FooterPartial","SachOnline")
        </footer>


</body>
</html>
